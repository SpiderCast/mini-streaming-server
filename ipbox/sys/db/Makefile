include $(PROJECT_MAKE)/board_$(TARGET_BOARD).mk

TARGET := db
SUBDIRS :=

all: $(TARGET_LIB)

$(TARGET_LIB): make_objdir make_objs
	@$(BUILD_SUBDIRS)
	@$(BUILD_LIB)

clean:
	@$(RM) $(TARGET_LIB)
	@$(RM) $(OBJS)
	@$(CLEAN_SUBDIRS)
	@$(RMDIR) $(OBJ_DIR)

## ------------------------------------------------------------------------------------------------------------------ ##

DIR_INCS := $(PROJECT_INC)/sys $(SDK_INCS)
DIR_CFLAGS :=

make_objdir:
	@$(MKDIR) $(OBJ_DIR)

make_objs: $(OBJS)
	@$(EXPORT_OBJS)

## ------------------------------------------------------------------------------------------------------------------ ##

ix_db.o: $(PROJECT_SYS)/inc/ix_db.h

